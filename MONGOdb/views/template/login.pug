main.login
      .container
            .login-form
                  .row
                        .col-md-offset-3.col-md-6.col-sm-offset-1.col-sm-10.col-xs-12
                              .bg-title
                                    span Login
                                    button.close
                                          span.close-line.close-line-top
                                          span.close-line.close-line-bot
                              .green-content
                                    form(method='post', action='/login')
                                          .form-group
                                                input(type='email', placeholder='Email')
                                                input(type='password', placeholder='Password')
                                                .login-links
                                                      .forgot-pass
                                                            a(href='#') Forgot your password?
                                                      .reg-order
                                                            a(href='#') Registration & order
                                                      .reg
                                                            a(href='#') Free registration
                                          .form-group                  
                                                a.btn-order(type='submit')
                                                      i.fa.fa-angle-right
                                                      | Login
